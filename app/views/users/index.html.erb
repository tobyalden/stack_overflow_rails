<h1>All Users</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.email %>
      <% if user.admin? %>
        <span> Admin </span>
      <% else %>
        <%= link_to "Make Admin", user_path(user, :update_info => "make_admin"), :method => "patch", :id => user.id %>
      <% end %>
    </li>
  <% end %>
</ul>
